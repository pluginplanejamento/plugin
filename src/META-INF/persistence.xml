<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

   	<persistence-unit name="Config">
		<class>org.visminer.model.database.Commit</class>
		<class>org.visminer.model.database.Committer</class>
		<class>org.visminer.model.database.File</class>
		<class>org.visminer.model.database.FileXCommit</class>
		<class>org.visminer.model.database.FileXCommitPK</class>
		<class>org.visminer.model.database.Metric</class>
		<class>org.visminer.model.database.MetricValue</class>
		<class>org.visminer.model.database.MetricValuePK</class>
		<class>org.visminer.model.database.Repository</class>
		<class>org.visminer.model.database.SoftwareUnit</class>
		<class>org.visminer.model.database.Tree</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:derby:/home/vogella/databases/simpleDb;create=true" />
			<property name="javax.persistence.jdbc.user" value="test" />
			<property name="javax.persistence.jdbc.password" value="test" />
		</properties>

	</persistence-unit>

</persistence>
